{
  "name": "newcastle-organizer-server",
  "version": "1.0.0",
  "description": "Trello clone",
  "main": "server/app.ts",
  "scripts": {
    "start": "node server/server.ts",
    "dev": "npm run prettier && cross-env NODE_ENV=development npx nodemon server/server.ts",
    "test": "jest --forceExit --coverage --verbose",
    "prettier": "npx prettier --config .prettierrc.json --write server/**/*.ts",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ismail-cloud/Newcastle-organizer-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ismail-cloud/Newcastle-organizer-server/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "homepage": "https://github.com/Ismail-cloud/Newcastle-organizer-server#readme",
  "dependencies": {
    "express": "^4.17.1",
    "dotenv": "^8.2.0",
    "bcrypt": "^5.0.0",
    "nodemailer": "^6.4.14",
    "passport": "^0.4.1",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/async": "^3.2.3",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.4",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.6",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
